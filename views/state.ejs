<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Weather App</title>
  <link rel="stylesheet" href="/country.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500&display=swap" rel="stylesheet">

</head>

<body>

  <div class="first">

    <div class="form">
      <form method="post" action="/place/search">
        <div class="form-group">
          <input type="text" class="form-control" name="place" placeholder="Enter Place">
        </div>

        <br />
        <button type="submit" class="button">Search</button>
        <a class="button" href="/">Cancel</a>
      </form>
    </div>
  </div>

  <div class="second">
    <button id="change" class="button" onclick="myFunction()">Hide Search</button>
    <div id="myDIV">
      <%if(search.length===0){%>
      <p class="para">No Search....</p>
      <%}%>

      <div class="items">
        <% search.forEach((item) => { %>
      <div class="item" style="width: 18rem;">
        <p><%=item.place%></p>
      </div>
      <% }); %>
    </div>
  </div>

  </div>

</body>

<script>
  function myFunction() {
    var x = document.getElementById("myDIV");
    var y = document.getElementById("change");
    if (x.style.display === "none") {
      y.innerHTML = "Hide search"
      x.style.display = "block";
    } else {
      y.innerHTML = "show search"
      x.style.display = "none";
    }
  }
</script>

</html>
